<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- COR PRIMÁRIA DO APP -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- VARIAÇÃO MAIS ESCURA DA COR PRIMÁRIA PARA A STATUS BAR E CONTEXTUAL APP BARS -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- COR DE ACENTUAÇÃO PARA AS VIEWS (CHECKBOX, TEXTFILD, ETC) -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- COR DE EFEITO RIPPLE -->
        <item name="colorControlHighlight">@color/control_highlight</item>
    </style>

</resources>
